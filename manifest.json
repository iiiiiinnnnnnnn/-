{
  "manifest_version": 2,
  "name": "ニコニコダウンローダ",
  "version": "1.0",
  "description": "ニコニコ動画のダウンロードを簡単にするFirefoxアドオン。",
  "permissions": [
    "tabs",
    "activeTab",
    "https://www.nicovideo.jp/*",
    "https://ext.nicovideo.jp/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Download Niconico Video",
    "default_icon": {
      "48": "icon.png"
    }
  },
    "browser_specific_settings": {
    "gecko": {
        "id": "addons@nicodownloaderrrr"
    }
  }
}
